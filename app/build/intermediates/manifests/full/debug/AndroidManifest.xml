<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shehrooz.foodish"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.shehrooz.foodish.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.shehrooz.foodish.activity.Details" />
        <activity android:name="com.example.shehrooz.foodish.activity.CartActivity" />
        <activity android:name="com.example.shehrooz.foodish.activity.OrderActivity" />
        <activity android:name="com.example.shehrooz.foodish.activity.ConfirmationActivity" />

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.example.shehrooz.foodish.com.squareup.picasso"
            android:exported="false" />
    </application>

</manifest>